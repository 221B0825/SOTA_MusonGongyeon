<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#676767"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/login_id"
        android:layout_width="302dp"
        android:layout_height="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/background_input"
        android:ems="10"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:paddingLeft="16dp"
        android:paddingBottom="5dp"
        android:textColor="#676767"
        android:textColorHint="#676767" />

    <EditText
        android:id="@+id/login_pw"
        android:layout_width="302dp"
        android:layout_height="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_input"
        android:ems="10"
        android:hint="영/숫자 8자리 이상"
        android:inputType="numberPassword|textWebPassword"
        android:paddingLeft="16dp"
        android:paddingBottom="5dp"
        android:textAlignment="viewStart"
        android:textColorHint="#676767" />

    <CheckBox
        android:id="@+id/login_checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:button="@android:drawable/checkbox_off_background"
        android:paddingLeft="5dp"
        android:text="로그인 상태 유지" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="302dp"
        android:layout_height="48dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/background_red_button"
        android:paddingBottom="5dp"
        android:text="로그인"
        android:textAlignment="center"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_findId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:layout_marginRight="10dp"
            android:text="아이디 찾기"
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/login_findPw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기"
            android:textAlignment="viewStart" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_firstVisit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="10dp"
            android:text="뮤슨공연이 처음이신가요?"
            android:textAlignment="textEnd"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/login_signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가입하기"
            android:textAlignment="viewStart"
            android:textColor="#CB1111"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>